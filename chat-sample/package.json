{
    "name": "chat-sample",
    "publisher": "vscode-samples",
    "displayName": "Copilot Chat Sample",
    "description": "Sample chat extension that assists you with your monitoring.",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/vscode-extension-samples"
    },
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.88.0"
    },
    "extensionDependencies": [
        "github.copilot-chat"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [ ],
    "enabledApiProposals": [
        "chatParticipant",
        "chatVariableResolver",
        "languageModels"
    ],
    "contributes": {
        "menus": {
            "commandPalette": [
                {
                    "command": "chat-sample.insertSuggestedCodeChanges",
                    "when": "false"
                }
            ]
        },
        "chatParticipants": [
            {
				"id": "chat-sample.nala",
                "name": "nala",
                "description": "Hello, my name is Nala! What code can I help you with today?",
                "isSticky": true,
                "commands": [
                    {
                        "name": "remediate",
                        "description": "Please examine and remediate any problems in the code."
                    },
                    {
                        "name": "optimize",
                        "description": "Please examine my code and optimize the code for performance."
                    }
                ]
            }
        ],
        "commands": [
            {
                "command": "chat-sample.insertSuggestedCodeChanges",
                "title": "Insert Suggested Code Changes"
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^20.5.9",
        "@types/vscode": "1.82.0",
        "eslint": "^7.22.0",
        "tslint": "^6.1.3",
        "typescript": "^4.0.3"
    }
}
